@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model OnlinePayment.Models.Electronic

@{
    ViewBag.Title = "Buy";
}

<h2>Buy</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Electronic</h4>
